<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/arrow_back"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="22dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T-shirt"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginTop="22dp"
                    android:layout_marginStart="25dp"
                    android:fontFamily="@font/poppinsmedium"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/search"
                    android:layout_marginTop="27dp"
                    android:layout_marginStart="145dp"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/bag"
                    android:layout_marginTop="27dp"
                    android:layout_marginStart="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="377.9dp"
                android:background="#F2F2F2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tshirt"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutdeskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="T-shirt"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginStart="10dp"/>

                <ImageView
                    android:id="@+id/addFavorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/favorite"
                    android:layout_marginStart="360dp"
                    android:layout_marginTop="-35dp"/>

                <TextView
                    android:id="@+id/textharga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 89.900"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="338dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Bahan : Katun Combed 24s"/>

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="338dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="- Extra Soft  Finishing"/>

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="338dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="- Jaminan sablon plastisol awet"/>

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="338dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="- Sejuk dan enak saat dipakai"/>

                <TextView
                    android:id="@+id/Stock"
                    android:layout_width="338dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:text="Stock 35 Pcs"
                    android:textSize="18dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:textColor="#000000"/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/R_btn_1"
                android:layout_width="300dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppinsbold"
                android:text="Size L"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:cornerRadius="5dp"
                app:strokeColor="#33000000"
                app:strokeWidth="1dp"
                tools:ignore="TextSizeCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/R_btn_2"
                android:layout_width="300dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/primarycolor"
                android:fontFamily="@font/poppinsbold"
                android:text="Tambahkan ke Keranjang"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:cornerRadius="5dp"
                app:strokeColor="#33000000"
                app:strokeWidth="1dp"
                tools:ignore="TextSizeCheck" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
