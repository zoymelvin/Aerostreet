            android:layout_marginTop="75dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintStart_toStartOf="@id/card_m"
            app:layout_constraintTop_toBottomOf="@id/card_m">

            <LinearLayout
                android:layout_width="match_parent"
