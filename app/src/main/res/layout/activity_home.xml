<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Main Content Area -->
    <LinearLayout
        android:id="@+id/Home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF"
        android:orientation="vertical"
        android:clipChildren="false"
        android:clipToPadding="false">

    <ScrollView
        android:id="@+id/ro6ttm1jlmip"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="30dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rvd5uibsq7u"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFFFF"
                android:paddingTop="3dp"
                android:paddingBottom="28dp"
                android:paddingHorizontal="27dp"
                android:layout_marginBottom="19dp"
                android:elevation="4dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/rlk725zf4vxd"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="15dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_marginTop="21dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/sidebarHome"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:src="@drawable/menu"
                        android:scaleType="fitXY"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ruzz4qk97dkc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginTop="21dp"
                    android:layout_marginEnd="4dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/r7wflx5dwxqt"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Shop"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/rn2d3u8k77qc"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/search"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:id="@+id/rkzfhzlptnwt"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/bag"
                    android:scaleType="fitXY"/>
            </LinearLayout>

            <TextView
                android:id="@+id/rqs1g5acpw2b"
                android:textColor="#000000"
                android:textSize="24sp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="19dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Selamat Datang, Iksan"/>

            <TextView
                android:id="@+id/rt7bv4xtbwqs"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginBottom="40dp"
                android:layout_marginStart="21dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Beberapa Top Picks untuk anda"/>

            <LinearLayout
                android:id="@+id/rhehfgit238j"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="11dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ruey7qslolm"
                    android:layout_width="189dp"
                    android:layout_height="114dp"
                    android:src="@drawable/home1"
                    android:scaleType="fitXY"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/rlh1pd3yj9ff"
                    android:layout_width="189dp"
                    android:layout_height="114dp"
                    android:src="@drawable/home2"
                    android:scaleType="fitXY"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rf5x42x54qvo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="19dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rbhm7eq0t8u"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:layout_width="170dp"
                    android:text="Sneakers of the Vulcanized Series"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/r7n7bvenx13v"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Aerostreet X Gibran 3"/>
            </LinearLayout>

            <TextView
                android:id="@+id/r9qhucu7qsc"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="21dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Men Series"/>

            <HorizontalScrollView
                android:id="@+id/rlxpuj9amlv8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="7dp"
                android:layout_marginBottom="27dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:fillViewport="true"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/rxdipw6zoa2e"
                        android:layout_width="285dp"
                        android:layout_height="112dp"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/home3" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/rqfbpvjrqktb"
                        android:layout_width="289dp"
                        android:layout_height="112dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/home4" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/rgz3egokss0p"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="18dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Women Series"/>

            <HorizontalScrollView
                android:id="@+id/ranfcd9vu9s5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="7dp"
                android:layout_marginBottom="31dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:fillViewport="true"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/rf3bl992b35c"
                        android:layout_width="285dp"
                        android:layout_height="104dp"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/home5" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ro36kxhb7lm"
                        android:layout_width="268dp"
                        android:layout_height="104dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/home6" />
                </LinearLayout>
            </HorizontalScrollView>

            <ImageView
                android:id="@+id/rayxy45mdojp"
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:src="@drawable/home7"
                android:scaleType="fitXY"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

    <include layout="@layout/sidebar"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"/>

</androidx.drawerlayout.widget.DrawerLayout>