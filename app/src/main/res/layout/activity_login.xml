<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:id="@+id/loginMain">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="11dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/header"
            android:scaleType="center"
            android:layout_marginStart="79.3dp"
            android:layout_marginTop="42dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:background="@drawable/input"
            android:layout_marginTop="247dp"
            android:layout_marginLeft="14.3dp"
            android:hint="email"
            android:textSize="14sp"
            android:padding="20dp"/>


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginTop="340dp"
            android:layout_marginLeft="14.3dp"
            android:background="@drawable/input2"
            android:hint="Password"
            android:textSize="14sp"
            android:padding="20dp"/>

        <ImageButton
            android:id="@+id/lupapassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="434dp"
            android:background="@drawable/forgotyourpassword_"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Sign"
            android:layout_width="357dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="13dp"
            android:backgroundTint="#293F66"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Sign In"
            android:textSize="20sp"
            app:cornerRadius="10dp"
            android:layout_below="@id/lupapassword"
            />


        <ImageButton
            android:id="@+id/newAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="549dp"
            android:contentDescription="button"
            android:background="@drawable/buttoncrt" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="615dp"
            android:background="@drawable/orcontinuewith"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="97.3dp"
            android:layout_marginTop="656dp"
            android:background="@drawable/google"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="167.3dp"
            android:layout_marginTop="656dp"
            android:background="@drawable/facebook"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="237.3dp"
            android:layout_marginTop="656dp"
            android:background="@drawable/apple"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>